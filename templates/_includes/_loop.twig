{% for post in posts %}
<div class="loop__element">
    <a href="{{ post.url }}">
        {% if post.feature_image|length %}
        {% set image = post.feature_image.one() %}
        <div class="loop__img">
            <img src="{{ image.getUrl('loop') }}" alt="{{ image.alt }}">
        </div>
        {% endif %}
        <div class="loop__text">
            <div>{{ post.title }}</div>
            <div class="loop__excerpt">{{ post.excerpt }}</div>
        </div>
    </a>
</div>
{% endfor %}